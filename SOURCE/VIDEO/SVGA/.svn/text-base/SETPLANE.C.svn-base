// Cambia de banco en una tarjeta EGA-VGA

#include <ClipApi.h>
#include <dos.h>

//----------------------------------------------------------------------------//

void SetPlane( WORD wPlane )
{
  outport( 0x3C4, 0x102 << wPlane );
}

//----------------------------------------------------------------------------//

CLIPPER SETPLANE()         // 0, 1, 2, ...
{
   SetPlane( _parni( 1 ) );
}

