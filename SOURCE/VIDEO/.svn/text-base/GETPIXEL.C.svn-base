#include <ClipApi.h>

//----------------------------------------------------------------------------//

BYTE GetPixel( WORD wRow, WORD wCol )
{
   _DX = wRow;
   _CX = wCol;
   _BH = 0;
   _AH = 0x0D;
   asm int 0x10;
   return _AL;
}

//----------------------------------------------------------------------------//

CLIPPER GETPIXEL()
{
   _retni( GetPixel( _parni( 1 ), _parni( 2 ) ) );
}

